<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChwTheme.Login" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorForeground">@color/primary</item>
        <item name="android:textSize">@dimen/login_font_size</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="ChwTheme.AppBarOverlay.NavigationDrawerStyle">
        <item name="android:textSize">20sp</item>
        <!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">70dp</item>
        <!-- item size in menu-->
        <item name="android:fontFamily">@font/google_sans_medium</item>
    </style>

    <style name="SettingsAlertDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/holo_red_light</item>
    </style>

</resources>